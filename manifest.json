{
  "manifest_version": 3,
  "name": "Buzzlytics - Advanced Tiktok Metrics",
  "version": "1.0.3",
  "action": { "default_popup": "index.html" },
  "permissions": [],
  "content_scripts": [
	{
		"js": ["src/content.tsx"],
		"matches": ["https://*.tiktok.com/*"],
		"run_at": "document_end"
	}
  ],
  "web_accessible_resources": [
	{
		"resources": ["src/tiktok-bio.ts"],
		"matches": ["https://*.tiktok.com/*"]
	}
  ],
  "icons": {
	"16": "icons/icon16.png",
	"32": "icons/icon32.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
  }
}
